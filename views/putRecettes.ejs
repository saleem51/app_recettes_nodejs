<%- include('./partials/header'); -%>
  <div class="center-img">
    <img src="/images/imgA.png" width="100" height="100">
  </div> 
  <h2 class="titre-2 mt-4">Modifier la recette</h2>
  <h3 class="titre-2"><%= oneRecette.titre %></h3>
  <% if(typeof oneRecette != 'undefined') { %>
    <div class="card-body center-img">
      <img src="<%= oneRecette.imageUrl %>" width="350" height="350">
    </div>
  <form id="recette-form" enctype="multipart/form-data" action="/put/recette/<%= oneRecette._id %>?_method=put" method="POST">
    <fieldset>  
      <div class="form-group">
        <label for="titre" class="form-label mt-4">Titre </label><span class="danger"> *</span>
        <input type="text" class="form-control larg" placeholder="<%= oneRecette.titre %>"  name="titre" id="titre" aria-describedby="titleHelp" >
        <small id="emailHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="user" class="form-label mt-4">Postée par </label><span class="danger"> *</span>
        <input type="text" class="form-control larg" name="user" id="user" aria-describedby="userHelp" placeholder="<%= oneRecette.user %>">
        <small id="userHelp" class="form-text text-muted"></small>
      </div>
      <div class="form-group">
        <label for="ingredients" class="form-label mt-4">Ingrédients</label><span class="danger"> *</span>
        <textarea class="form-control larg" name="ingredients" id="ingredients" rows="4" placeholder="<%= oneRecette.ingredients %>"></textarea>
      </div>
      <div class="form-group">
        <label for="preparation" class="form-label mt-4">Prépartion </label><span class="danger"> *</span>
        <textarea class="form-control larg" name="preparation" id="preparation" rows="7" placeholder="<%= oneRecette.preparation %>"></textarea>
      </div>
      <div class="form-group">
        <label for="image" class="form-label mt-4">Image </label>
        <input class="form-control larg" type="file" id="image" name="image">
      </div>
      <button type="submit" id="envoyer" class="btn btn-primary mt-4">Modifier</button>
    </fieldset>
  </form>
<% } %>
  <script type="text/javascript" src="/js/main.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
<%- include('./partials/footer'); -%>