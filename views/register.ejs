<%- include('./partials/header'); -%>
<div class="contain">
  <div class="center-img">
    <img src="/images/imgA.png" width="150" height="150">
  </div>
  <form id="register-form">
    <fieldset>
      <div class="form-group">
        <label for="pseudo" class="form-label mt-4">Pseudo</label>
        <input type="text" class="form-control input-size" id="pseudo" name="pseudo" aria-describedby="Help" placeholder="Entrez votre pseudo">
        <!--small id="Help" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
        <div class="invalid-feedback">Pseudo non enregistré veuillez réessayer</div>
      </div>
      <div class="form-group">
        <label for="email1" class="form-label mt-4">Email address</label>
        <input type="email" class="form-control input-size" id="email1" name="email" aria-describedby="emailHelp" placeholder="Enter email">
        <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
        <div class="invalid-feedback">email invalide veuillez entrez un email valide</div>
      </div>
      <div class="form-group">
        <label for="password1" class="form-label mt-4">Password</label>
        <input type="password" class="form-control input-size" id="password1" name="password1" placeholder="Password">
        <div class="invalid-feedback">Le mot de passe ne correspond pas</div>
      </div>
      <button type="submit" class="btn btn-primary mt-4 mb-4">S'inscrire</button>
    </fieldset>
  </form>
  <div class="center-link">
    <a class="center-link" href="/user/login">Déja inscrit ? se connecter</a>
  </div>
</div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
