<%- include('./partials/header'); -%>
<div class="center-img">
  <img src="/images/imgA.png" width="100" height="100">
</div>
<h2 class="titre-2 mt-4"><%= getRecette.titre %></h2>  
    <div class="card mb-3 border-primary card-size">
      <h3 class="card-header center-img"><%= getRecette.titre %></h3>
      <div class="card-body center-img">
        <img src="<%= getRecette.imageUrl %>" width="250" height="250">
      </div>
      <h4 class="card-header">Ingrédients :</h4>
      <div class="card-body">
        <h5 class="card-text"><%= getRecette.ingredients %></h5>
      </div>
      <h4 class="card-header">Préparation :</h4>
      <div class="card-body">
        <h5 class="card-text"><%= getRecette.preparation %></h5>
      </div>
      <div class="card-header">
        <h5 class="card-title"><%= getRecette.user %></h5>
      </div>
      <div class="card-footer text-muted"><%= getRecette.date %></div>
      <div class="card-header" id="flex-div2">
        <form action="/recette/put/:id">
          <button type="submit" class="btn-success me-4">Modifier</button>
        </form>
        <form action="/recette/put/:id">
          <button class="btn-danger">Supprimer</button>
        </form>
      </div>
    </div>
    <script type="text/javascript" src="/js/main.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
<%- include('./partials/footer'); -%>